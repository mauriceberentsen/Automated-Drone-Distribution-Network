<?xml version="1.0" encoding="UTF-8"?>

<launch>
    <!--Drone URDF -->
    <param name="robot_description" command="cat $(find abstract_drone)/model/drone.sdf" />
    <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-sdf -param robot_description -model drone" />
    <!-- overwritting these args -->
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="extra_gazebo_args" default=""/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="physics" default="ode"/>
    <arg name="verbose" default="false"/>
    <arg name="world_name" default="worlds/empty.world"/>

    <!-- include gazebo_ros launcher-->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="headless" value="$(arg headless)"/>
        <arg name="use_sim_time" value="true"/>
    </include>
</launch>
